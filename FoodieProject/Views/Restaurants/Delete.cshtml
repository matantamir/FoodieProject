<div>
    <hr class="form_hr"/>
    <dl class="row">
        <dt class = "col-sm-2 delete_titles">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10 text_shadow">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2 delete_titles">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10 text_shadow">
