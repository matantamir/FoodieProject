        <dt class = "col-sm-2 delete_titles">
            @Html.DisplayNameFor(model => model.PicturePath)
        </dt>
        <dd class = "col-sm-10 text_shadow">
            @Html.DisplayFor(model => model.PicturePath)
        </dd>
        <dt class = "col-sm-2 delete_titles">
            @Html.DisplayNameFor(model => model.Rate)
