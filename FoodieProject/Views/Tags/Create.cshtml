@model FoodieProject.Models.Tag

@{
    ViewData["Title"] = "Create";
}

<h1 class="title_font text_shadow">Tag</h1>

<hr class="form_hr"/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="form_danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label form_text_font"></label>
                <input asp-for="Name" class="form-control form-control-light" />
                <span asp-validation-for="Name" class="form_danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="form_text_font"> </label>
                <input type="color" asp-for="Color"/>
                <span asp-validation-for="Color" class="form_danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-light" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="edit_delete_details form_text_font" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
