@model FoodieProject.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1 class="title_font text_shadow">Edit User</h1>
<hr class="form_hr"/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="form_danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Username" class="control-label form_text_font"></label>
                <input asp-for="Username" class="form-control form-control-light login_input"  />
                <span asp-validation-for="Username" class="form_danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label form_text_font"></label>
                <input asp-for="Password" class="form-control form-control-light login_input" value="@ViewBag.Password"/>
                <span asp-validation-for="Password" class="form_danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label form_text_font"></label>
                <select asp-for="Type" asp-items="@Html.GetEnumSelectList<UserRole>()" class="form-control form-control-light login_input"></select>
                <span asp-validation-for="Type" class="form_danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-light" />
            </div>
        </form>
    </div>
</div>

<div>
    <a  class="edit_delete_details form_text_font" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
