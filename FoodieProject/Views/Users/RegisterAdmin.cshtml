@model FoodieProject.Models.User

@{
    ViewData["Title"] = "RegisterAdmin";
    Layout = "_LoginLayout";
}
<br />
<h1 class="login_title_font">Register a new user - Admin</h1>

<hr class="form_hr"/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterAdmin">
            <div asp-validation-summary="ModelOnly" class="font-weight-bold form_danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label form_text_font"></label>
                <input asp-for="Username" class="form-control form-control-light" />
                <span asp-validation-for="Username" class="font-weight-bold form_danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label form_text_font"></label>
                <input asp-for="Password" class="form-control form-control-light" />
                <span asp-validation-for="Password" class="font-weight-bold form_danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label form_text_font"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<UserRole>()" class="form-control" />
                    <option>Admin</option>
                    <option>Client</option>
                </select>
                <span asp-validation-for="Type" class="font-weight-bold form_danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register user" class="btn btn-light" />
            </div>
        </form>
        
        @if (ViewData.ContainsKey("ErrorUserExists"))
        {
            <div class="font-weight-bold form_danger">@ViewData["ErrorUserExists"]</div>
        }
    </div>
</div>
<div>
    <a class="edit_delete_details form_text_font" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
