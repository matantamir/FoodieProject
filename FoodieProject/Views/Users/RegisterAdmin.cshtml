@model FoodieProject.Models.User

@{
    ViewData["Title"] = "RegisterAdmin";
    Layout = "_LoginLayout";
}

<h1 class="login_font">Register a new user - Admin</h1>

<hr class="login_hr"/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterAdmin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label login_div"></label>
                <input asp-for="Username" class="form-control form-control-login" />
                <span asp-validation-for="Username" class="font-weight-bold login_danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label login_div"></label>
                <input asp-for="Password" class="form-control form-control-login" />
                <span asp-validation-for="Password" class="font-weight-bold login_danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label login_div"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<UserRole>()" class="form-control" />
                    <option>Admin</option>
                    <option>Client</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register user" class="btn btn-light" />
            </div>
        </form>
        
        @if (ViewData.ContainsKey("ErrorUserExists"))
        {
            <div class="font-weight-bold login_danger">@ViewData["ErrorUserExists"]</div>
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
