@model FoodieProject.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}
<style>
    input, textarea {
        background-color: #d1d1d1;
    }
</style>
<br />
<h1 class="login_font text_shadow">Login to Foodie!</h1>

<hr class="login_hr" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label login_div"></label>
                <input asp-for="Username" class="form-control form-control-login" />
                <span asp-validation-for="Username" class="font-weight-bold login_danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="Password" class="control-label login_div"></label>
                <input asp-for="Password" class="form-control form-control-login" />
                <span asp-validation-for="Password" class="font-weight-bold login_danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Foodin" class="btn btn-light" />
            </div>

        </form>
        @if (ViewData.ContainsKey("ErrorLoginFailed"))
        {
            <div class="font-weight-bold login_danger">@ViewData["ErrorLoginFailed"]</div>
        }
    </div>
    <div class="col-md-4 login_image">
        <img src="~/Pictures/login.png" />
    </div>
</div>
<div class="login_div">
    Dont have a Foodie's account?? <a class="login_link" asp-action="Register">Click here</a> to Register
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
