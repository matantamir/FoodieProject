@model FoodieProject.Models.Address

@{
    ViewData["Title"] = "Create";
}

<h1 class="title_font text_shadow">Create Address</h1>
<hr class="form_hr" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="City" class="control-label form_text_font"></label>
                <input asp-for="City" class="form-control form-control-light" />
                <span asp-validation-for="City" class="font-weight-bold form_danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label form_text_font"></label>
                <input asp-for="Street" class="form-control form-control-light" />
                <span asp-validation-for="Street" class="font-weight-bold form_danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label form_text_font"></label>
                <input asp-for="Number" class="form-control form-control-light" />
                <span asp-validation-for="Number" class="font-weight-bold form_danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-light" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="edit_delete_details form_text_font" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}